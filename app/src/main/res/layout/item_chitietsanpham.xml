<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ChiTietSanPhamActivity"
    android:orientation="vertical">
<!--    xmlns:app="http://schemas.android.com/apk/res-auto">-->
    <FrameLayout
        android:id="@+id/fragmentChiTietSP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:background="#F13979"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnBackCT"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginVertical="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.85"
                android:layout_height="match_parent"
                android:text="Chi tiết sản phẩm"
                android:textSize="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:paddingLeft="10dp"/>
            <Button
                android:id="@+id/btnGioHangCT"
                android:layout_width="0dp"
                android:layout_weight="0.05"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_shopping_cart_24"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.95">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp">
                <ImageView
                    android:id="@+id/imgAnhCT"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginHorizontal="50dp"/>
                <TextView
                    android:id="@+id/tvTenSPCT"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tvGiaCT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#F41E0F"/>
                <RatingBar
                    android:id="@+id/ratingBarDanhGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chọn màu"
                        android:textSize="20dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btnMau1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Xanh" />

                        <Button
                            android:id="@+id/btnMau2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Đỏ"/>

                        <Button
                            android:id="@+id/btnMau3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Vàng"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btnMau4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Hồng"/>

                        <Button
                            android:id="@+id/btnMau5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Cam"/>

                        <Button
                            android:id="@+id/btnMau6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Trắng"/>
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chọn size"
                        android:textSize="20dp"
                        android:layout_marginLeft="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btnSize1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="5-7 kg"/>

                        <Button
                            android:id="@+id/btnSize2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="7-10 kg"/>

                        <Button
                            android:id="@+id/btnSize3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="10-15 kg"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:layout_marginVertical="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:text="Số lượng: "
                            android:gravity="center_vertical"
                            android:textSize="20dp"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:layout_gravity="right"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <Button
                                android:id="@+id/btnGiam"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"
                                android:text="-"
                                android:textSize="20dp"
                                android:background="@drawable/custom_border"/>
                            <TextView
                                android:id="@+id/tvSoLuongSP"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"
                                android:text="1"
                                android:textSize="20dp"
                                android:gravity="center"
                                android:background="@drawable/custom_border"
                                android:textColor="#FF5722"/>
                            <Button
                                android:id="@+id/btnTang"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"
                                android:text="+"
                                android:textSize="20dp"
                                android:background="@drawable/custom_border"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnThemVaoGioHang"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Thêm vào giỏ hàng"
                        android:background="@drawable/custom_button_themgiohang"
                        android:layout_marginHorizontal="10dp"/>
                    <Button
                        android:id="@+id/btnMuaNgay"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Mua ngay"
                        android:background="@drawable/custom_button_themgiohang"
                        android:layout_marginHorizontal="10dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mô tả sản phẩm"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/tvMoTaSPCT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textAlignment="gravity"
                    android:layout_marginHorizontal="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cách bảo quản"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/tvCachBaoQuanCT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textAlignment="gravity"
                    android:layout_marginHorizontal="10dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>