<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DonMuaChiTietActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="#F13979"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnBackDonMuaChiTiet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@drawable/ic_baseline_arrow_back_24" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:text="Thông tin đơn hàng"
            android:textSize="25dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rlDiaChi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="#FAC5D7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Thông tin người nhận hàng: "
                android:paddingLeft="5dp"
                android:textSize="18dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvHoTen"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:textSize="18dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvSoDienThoai"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:textSize="18dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvDiaChi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:textSize="18dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/lvProduct"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.05"
        android:background="#F4B2C9">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Hình thức thanh toán: "
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/tvHinhThucThanhToan"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Thanh toán khi nhận hàng"
            android:textSize="18dp"
            android:gravity="right"
            android:paddingTop="8dp"
            android:paddingRight="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.05"
        android:background="#F4B2C9">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Phí vận chuyển: "
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="20000 đ"
            android:textSize="18dp"
            android:gravity="right"
            android:paddingTop="8dp"
            android:paddingRight="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.05"
        android:background="#F4B2C9">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Thời gian thanh toán: "
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/tvThoiGian"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:gravity="right"
            android:paddingTop="8dp"
            android:paddingRight="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.05"
        android:background="#F4B2C9">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Thời gian hoàn thành: "
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/tvThoiGianHoanThanh"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:gravity="right"
            android:paddingTop="8dp"
            android:paddingRight="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.05"
        android:background="#F4B2C9">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Tổng tiền: "
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/tvTongTien"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="20dp"
            android:gravity="right"
            android:paddingTop="5dp"
            android:paddingRight="5dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnMuaLai"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.04"
        android:text="Mua lại"
        android:textSize="15dp"
        android:background="@drawable/custom_button_themgiohang"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="5dp"/>

</LinearLayout>