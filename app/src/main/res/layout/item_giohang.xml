<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_itemGH">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp">
        <ImageView
            android:id="@+id/imgAnhGH"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:layout_weight="0.1"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTenSPGH"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="18dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:text="Phân loại:"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tvMauGH"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:text=", "
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tvSizeGH"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
<!--            <TextView-->
<!--                android:id="@+id/tvPhanLoaiSPGH"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="0dp"-->
<!--                android:textSize="15dp"-->
<!--                android:layout_weight="1"-->
<!--                android:layout_gravity="center"/>-->
            <TextView
                android:id="@+id/tvGiaGH"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="18dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnGiamSL"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="20dp"
                    android:background="@drawable/custom_border"/>
                <TextView
                    android:id="@+id/tvSoLuong"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:background="@drawable/custom_border"
                    android:textColor="#FF5722"/>
                <Button
                    android:id="@+id/btnTangSL"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="+"
                    android:textSize="20dp"
                    android:background="@drawable/custom_border"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>