<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.DonHangMuaActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#F13979">
        <Button
            android:id="@+id/btnBackDonMua"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"/>

        <TextView
            android:layout_weight="0.9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Đơn mua"
            android:textSize="25dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDDBE8">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_donMua"
            android:layout_width="match_parent"
            app:tabSelectedTextColor="#EF3A2D"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"/>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pagerDonMua"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>