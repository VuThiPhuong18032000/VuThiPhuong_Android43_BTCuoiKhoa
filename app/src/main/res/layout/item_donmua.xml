<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_itemDonMua">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgAnh"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_weight="0.1"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTenSP"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="18dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:text="Phân loại:"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tvMau"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:text=", "
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tvSize"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvGia"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="18dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:text="x"
                    android:textSize="20dp"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/tvSoLuong"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:text="1"
                    android:textSize="20dp"
                    android:paddingLeft="3dp"
                    android:gravity="center_vertical"
                    android:textColor="#FF5722"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvSoSP"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvThanhTien"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:paddingLeft="80dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnMuaLai"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="MUA LẠI"
        android:background="@drawable/custom_button_themgiohang"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginVertical="10dp">
    </Button>

</LinearLayout>